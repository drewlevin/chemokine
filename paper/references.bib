journal = {Journal of Virology},
number = {18},
pages = {9298--9306},
publisher = {American Society for Microbiology},
title = {{Release of Macrophage Migration Inhibitory Factor and CXCL8/Interleukin-8 from Lung Epithelial Cells Rendered Necrotic by Influenza A Virus Infection}},
url = {http://view.ncbi.nlm.nih.gov/pubmed/12186913},
