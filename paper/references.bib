number = {4},
pages = {306--314},
pmid = {17420768},
title = {{Spatial modelling of brief and long interactions between T cells and dendritic cells.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/17420768},
volume = {85},
year = {2007}
}
